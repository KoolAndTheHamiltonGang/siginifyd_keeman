<?xml version="1.0" encoding="UTF-8"?>

<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="ConfigureSignifydKeyActionGroup">
        <annotations>
            <description>Setting Signifyd Api Key.</description>
        </annotations>

        <amOnPage url="{{AdminSignifydConfigurationPage.url}}" stepKey="signifydConfigPage"/>
        <waitForPageLoad time="30" stepKey="waitPageFullyLoaded"/>
        <waitForElementVisible selector="{{AdminSignifydSection.signifydKey}}" stepKey="waitFormAppears"/>
        <fillField userInput="{{SignifydConfiguration.apiKey}}" selector="{{AdminSignifydSection.signifydKey}}" stepKey="fillSignifydKey"/>
        <click selector="{{AdminSignifydSection.configSave}}" stepKey="clickSaveButton"/>
    </actionGroup>
</actionGroups>